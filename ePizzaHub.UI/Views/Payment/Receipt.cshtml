@model ePizzaHub.DAL.Entities.PaymentDetail

@{
    ViewData["Title"] = "Receipt";
}

<h1>Receipt</h1>
</hr>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Payment Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>       
